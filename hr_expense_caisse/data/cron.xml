<odoo>
  <data>
    <record id="ir_cron_create_monthly_record" model="ir.cron">
      <field name="name">Create Monthly Caisse Records</field>
      <field name="model_id" ref="model_hr_expense_account"/>
      <field name="state">code</field>
      <field name="code">model.create_monthly_record()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">months</field>
      <!-- <field name="numbercall">-1</field> -->
      <field name="active" eval="True"/>
      <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1))"/>
      <!-- Exécution au début du mois suivant -->
    </record>
    <record id="ir_cron_recalculate_all_monthly_balances_giniral" model="ir.cron">
      <field name="name">recalculate_all_monthly_balances_giniral</field>
      <field name="model_id" ref="model_hr_expense_account_move"/>
      <field name="state">code</field>
      <field name="code">model.recalculate_all_monthly_balances_giniral()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">weeks</field>
      <!-- <field name="numbercall">-1</field> -->
      <field name="active" eval="True"/>
      <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1))"/>
      <!-- Exécution au début du mois suivant -->
    </record>


  </data>
</odoo>
