<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WebSocket Configuration Form View -->
    <record id="view_ws_notifier_form" model="ir.ui.view">
        <field name="name">ws.notifier.form</field>
        <field name="model">ws.notifier</field>
        <field name="arch" type="xml">
            <form string="WebSocket Configuration">
                <header>
                    <button name="test_websocket_connection" string="Test Connection" 
                            type="object" class="btn-primary"/>
                    <button name="reset_to_default_config" string="Reset to Defaults" 
                            type="object" class="btn-warning" 
                            confirm="Are you sure you want to reset to default configuration?"/>
                    <button name="toggle_websocket" string="Toggle Enable/Disable" 
                            type="object" class="btn-secondary"/>
                    <field name="connection_status" widget="badge" 
                           decoration-success="connection_status == 'connected'"
                           decoration-info="connection_status == 'unknown'"
                           decoration-danger="connection_status == 'error'"
                           decoration-muted="connection_status == 'disconnected'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Connection Settings">
                            <field name="enabled"/>
                            <field name="gateway_url" placeholder="http://localhost:3000/websocket"/>
                            <field name="timeout"/>
                            <field name="retry_attempts"/>
                            <field name="auth_token" password="True"/>
                        </group>
                        <group string="Debug and Status">
                            <field name="debug_mode"/>
                            <field name="last_health_check" readonly="1"/>
                            <field name="last_error" readonly="1" widget="text"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Test Tools">
                            <group>
                                <field name="test_message" placeholder="Enter test message..."/>
                                <field name="test_channel" placeholder="Enter test channel name..."/>
                            </group>
                        </page>
                        <page string="Configuration History">
                            <field name="config_history" readonly="1" nolabel="1" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WebSocket Configuration Tree View -->
    <record id="view_ws_notifier_tree" model="ir.ui.view">
        <field name="name">ws.notifier.tree</field>
        <field name="model">ws.notifier</field>
        <field name="arch" type="xml">
            <list string="WebSocket Configuration">
                <field name="display_name"/>
                <field name="enabled" widget="boolean_toggle"/>
                <field name="gateway_url"/>
                <field name="connection_status" widget="badge" 
                       decoration-success="connection_status == 'connected'"
                       decoration-info="connection_status == 'unknown'"
                       decoration-danger="connection_status == 'error'"
                       decoration-muted="connection_status == 'disconnected'"/>
                <field name="last_health_check"/>
                <field name="debug_mode" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- WebSocket Configuration Action -->
    <record id="action_ws_notifier" model="ir.actions.act_window">
        <field name="name">WebSocket Configuration</field>
        <field name="res_model">ws.notifier</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="view_ws_notifier_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure WebSocket Integration
            </p>
            <p>
                Set up your WebSocket gateway connection, authentication, and test the connection.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ws_notifier"
              name="WebSocket Configuration"
              parent="menu_websocket_configuration"
              action="action_ws_notifier"
              sequence="10"/>
</odoo>
