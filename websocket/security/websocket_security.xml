<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- WebSocket Admin Group -->
        <record id="group_websocket_admin" model="res.groups">
            <field name="name">WebSocket Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Users can manage WebSocket configuration and view all logs</field>
        </record>

        <!-- WebSocket User Group -->
        <record id="group_websocket_user" model="res.groups">
            <field name="name">WebSocket User</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Users can view WebSocket status and send test messages</field>
        </record>

        <!-- Rule for WebSocket Configuration (Admin only) -->
        <record id="websocket_admin_rule" model="ir.rule">
            <field name="name">WebSocket Admin Rule</field>
            <field name="model_id" ref="model_ws_notifier"/>
            <field name="groups" eval="[(4, ref('group_websocket_admin'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Rule for WebSocket Read-only (Users) -->
        <record id="websocket_user_rule" model="ir.rule">
            <field name="name">WebSocket User Rule</field>
            <field name="model_id" ref="model_ws_notifier"/>
            <field name="groups" eval="[(4, ref('group_websocket_user'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- System parameter access rules -->
        <record id="websocket_config_access" model="ir.rule">
            <field name="name">WebSocket Config Parameters</field>
            <field name="model_id" ref="base.model_ir_config_parameter"/>
            <field name="groups" eval="[(4, ref('group_websocket_admin'))]"/>
            <field name="domain_force">[('key', '=like', 'websocket.%')]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
